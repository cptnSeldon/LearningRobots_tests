        <Image x:Name="imgColorStream" HorizontalAlignment="Left" Height="490" Margin="10,10,0,0" VerticalAlignment="Top" Width="774"/>
        <Button x:Name="buttonStart" Content="Button" HorizontalAlignment="Left" Margin="709,534,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Height="26"/>
    </Grid>
    
</Window>
